<h1>Perfil de <%= "@#{@user_profile.user.username}" %></h1>
<dl>
  <dt>Nome</dt>
  <dd><%= @user_profile.name %></dd>
  <dt>Bio</dt>
  <dd><%= @user_profile.bio %></dd>
  <dt><%= "#{@user_profile.user.followings.all.count } Seguindo"  %>
<% if @user_profile.user == current_user %>
  <dd><%= link_to 'Editar perfil', edit_profile_path %>
<% else %>
  <% if !current_user.followings.include?(@user_profile.user) %>
    <dd><%= link_to 'Seguir', follow_profile_path, method: :post %>
  <% end %>
<% end %>
</dl>
